server {
    listen          80;
    server_name     localhost;
    return          301;

    location / {
        root   /usr/share/nginx/html;
        index  insert.html index.html index.html   
    }

server {
    listen       443;
    server_name  localhost;
    
    ssl_certificate     /etc/nginx/ssl/site.crt
    ssl_certificate_key /etc/nginx/ssl/rootCA.pem
}


    location /person {
        proxy_pass   http://backend:5000;
    }

    location /persons {
        proxy_pass   http://backend:5000;
    }


}
